<brls:AppletFrame
        iconInterpolation="linear"
        headerHidden="true"
        footerHidden="false">

        <brls:Box backgroundColor="@theme/brls/background">
                <AutoTabFrame
                        id="setting/tabFrame"
                        grow="1"
                        tabBackgroundColor="@theme/color/grey_1"
                        tabItemActiveTextColor="@theme/color/tsvitch"
                        defaultTab="0"
                        demandMode="false"
                        sidebarWidth="240"
                        sidebarPosition="left">

                        <Tab label="@i18n/tsvitch/setting/about/tab"
                                style="inline"
                                icon="@res/svg/setting_about.svg"
                                iconActivate="@res/svg/setting_about_active.svg"
                                fontSize="22">
                                <brls:ScrollingFrame
                                        width="auto"
                                        height="auto"
                                        marginTop="10"
                                        grow="1.0">
                                        <brls:View xml="@res/xml/fragment/settings_about.xml" />
                                </brls:ScrollingFrame>
                        </Tab>
                        <Tab label="@i18n/tsvitch/setting/tools/tab"
                                style="inline"
                                icon="@res/svg/setting_tools.svg"
                                iconActivate="@res/svg/setting_tools_active.svg"
                                fontSize="22">
                                <brls:ScrollingFrame
                                        width="auto"
                                        height="auto"
                                        marginTop="10"
                                        grow="1.0">

                                        <brls:Box
                                                width="auto"
                                                height="auto"
                                                axis="column"
                                                alignItems="stretch"
                                                paddingLeft="@style/brls/tab_frame/content_padding_sides"
                                                paddingRight="@style/brls/tab_frame/content_padding_sides"
                                                paddingTop="@style/brls/tab_frame/content_padding_top_bottom"
                                                paddingBottom="@style/brls/tab_frame/content_padding_top_bottom">
                                                <brls:Header
                                                        width="auto"
                                                        height="auto"
                                                        title="@i18n/tsvitch/setting/tools/m3u8/header"
                                                        marginBottom="0px" />
                                                <brls:Box
                                                        width="100%"
                                                        height="auto"
                                                        axis="column"
                                                        marginBottom="30px">

                                                        <brls:InputCell
                                                                id="setting/tools/m3u8/input"
                                                        />
                                                        <brls:InputCell
                                                                id="setting/tools/pin/change"
                                                        />


                                                </brls:Box>
                                                <brls:Header
                                                        width="auto"
                                                        height="auto"
                                                        title="@i18n/tsvitch/setting/tools/tutorial/header"
                                                        marginBottom="0px" />
                                                <brls:Box
                                                        width="100%"
                                                        height="auto"
                                                        axis="column"
                                                        marginBottom="30px">

                                                        <brls:RadioCell
                                                                id="tools/tutorial_open"
                                                                title="@i18n/tsvitch/setting/tools/tutorial/open" />

                                                        <brls:RadioCell
                                                                id="tools/tutorial_error"
                                                                title="@i18n/tsvitch/setting/tools/tutorial/error" />

                                                        <brls:RadioCell
                                                                id="tools/tutorial_font"
                                                                title="@i18n/tsvitch/setting/tools/tutorial/font" />

                                                </brls:Box>
                                                <brls:Header
                                                        width="auto"
                                                        height="auto"
                                                        title="@i18n/tsvitch/setting/tools/test/header"
                                                        marginBottom="0px" />
                                                <brls:Box
                                                        width="100%"
                                                        height="auto"
                                                        axis="column"
                                                        marginBottom="30px">

                                                        <brls:RadioCell
                                                                id="tools/network_checker"
                                                                title="@i18n/tsvitch/setting/tools/test/net" />

                                                        <brls:RadioCell
                                                                id="tools/vibration_test"
                                                                title="@i18n/tsvitch/setting/tools/test/vibration" />

                                                </brls:Box>
                                                <brls:Header
                                                        width="auto"
                                                        height="auto"
                                                        title="@i18n/tsvitch/setting/tools/others/header"
                                                        marginBottom="0px" />

                                                <brls:RadioCell
                                                        id="tools/config_dir"
                                                        title="@i18n/tsvitch/setting/tools/others/config" />

                                                <brls:RadioCell
                                                        id="tools/release_checker" />

                                                <brls:RadioCell
                                                        id="tools/quit"
                                                        title="@i18n/hints/exit" />
                                        </brls:Box>
                                </brls:ScrollingFrame>
                        </Tab>

                        <Tab label="@i18n/tsvitch/setting/app/playback/header"
                                style="inline"
                                icon="@res/svg/setting_play.svg"
                                iconActivate="@res/svg/setting_play_active.svg"
                                fontSize="22">
                                <brls:ScrollingFrame
                                        width="auto"
                                        height="auto"
                                        marginTop="10"
                                        grow="1.0">

                                        <brls:Box
                                                width="auto"
                                                height="auto"
                                                axis="column"
                                                alignItems="stretch"
                                                paddingLeft="@style/brls/tab_frame/content_padding_sides"
                                                paddingRight="@style/brls/tab_frame/content_padding_sides"
                                                paddingTop="@style/brls/tab_frame/content_padding_top_bottom"
                                                paddingBottom="@style/brls/tab_frame/content_padding_top_bottom">
                                                <brls:Header
                                                        width="auto"
                                                        height="auto"
                                                        title="@i18n/tsvitch/setting/app/playback/player"
                                                        marginBottom="0px" />
                                                <brls:Box
                                                        width="100%"
                                                        height="auto"
                                                        axis="column"
                                                        marginBottom="30px">

                                                        <brls:BooleanCell
                                                                id="setting/video/quality" />

                                                        <brls:BooleanCell
                                                                id="setting/video/hwdec" />

                                                        <SelectorCell
                                                                id="setting/video/inmemory" />

                                                </brls:Box>

                                        </brls:Box>
                                </brls:ScrollingFrame>
                        </Tab>

                        <Tab label="@i18n/tsvitch/setting/app/ui/header"
                                style="inline"
                                icon="@res/svg/setting_ui.svg"
                                iconActivate="@res/svg/setting_ui_active.svg"
                                fontSize="22">
                                <brls:ScrollingFrame
                                        width="auto"
                                        height="auto"
                                        marginTop="10"
                                        grow="1.0">

                                        <brls:Box
                                                width="auto"
                                                height="auto"
                                                axis="column"
                                                alignItems="stretch"
                                                paddingLeft="@style/brls/tab_frame/content_padding_sides"
                                                paddingRight="@style/brls/tab_frame/content_padding_sides"
                                                paddingTop="@style/brls/tab_frame/content_padding_top_bottom"
                                                paddingBottom="@style/brls/tab_frame/content_padding_top_bottom">
                                                <brls:Header
                                                        width="auto"
                                                        height="auto"
                                                        title="@i18n/tsvitch/setting/app/ui/window"
                                                        marginBottom="0px" />
                                                <brls:Box
                                                        width="100%"
                                                        height="auto"
                                                        axis="column"
                                                        marginBottom="30px">

                                                        <brls:BooleanCell
                                                                id="cell/fullscreen" />

                                                        <SelectorCell
                                                                id="cell/onTopMode" />

                                                        <SelectorCell
                                                                id="setting/fps" />

                                                        <SelectorCell
                                                                id="setting/ui/theme" />

                                                        <SelectorCell
                                                                id="setting/custom/theme" />

                                                        <SelectorCell
                                                                id="setting/ui/scale" />

                                                </brls:Box>
                                                <brls:Header
                                                        width="auto"
                                                        height="auto"
                                                        title="@i18n/tsvitch/setting/app/ui/bottom_bar"
                                                        marginBottom="0px" />
                                                <brls:Box
                                                        width="100%"
                                                        height="auto"
                                                        axis="column"
                                                        marginBottom="30px">

                                                        <brls:BooleanCell
                                                                id="cell/showBottomBar" />

                                                        <brls:BooleanCell
                                                                id="cell/showFPS" />

                                                        <SelectorCell
                                                                id="setting/keymap" />

                                                        <brls:BooleanCell
                                                                id="setting/keymap_swap" />

                                                </brls:Box>

                                                <brls:Header
                                                        width="auto"
                                                        height="auto"
                                                        title="@i18n/tsvitch/setting/app/others/header"
                                                        marginBottom="0px" />
                                                <brls:Box
                                                        width="100%"
                                                        height="auto"
                                                        axis="column"
                                                        marginBottom="0px">

                                                        <brls:BooleanCell
                                                                id="cell/gamepadVibration" />

                                                        <brls:BooleanCell
                                                                id="setting/opencc" />

                                                        <SelectorCell
                                                                id="setting/language" />
                                                </brls:Box>
                                        </brls:Box>
                                </brls:ScrollingFrame>
                        </Tab>

                        <Tab label="@i18n/tsvitch/setting/app/others/header"
                                style="inline"
                                icon="@res/svg/setting_others.svg"
                                iconActivate="@res/svg/setting_others_active.svg"
                                fontSize="22">
                                <brls:ScrollingFrame
                                        width="auto"
                                        height="auto"
                                        marginTop="10"
                                        grow="1.0">

                                        <brls:Box
                                                width="auto"
                                                height="auto"
                                                axis="column"
                                                alignItems="stretch"
                                                paddingLeft="@style/brls/tab_frame/content_padding_sides"
                                                paddingRight="@style/brls/tab_frame/content_padding_sides"
                                                paddingTop="@style/brls/tab_frame/content_padding_top_bottom"
                                                paddingBottom="@style/brls/tab_frame/content_padding_top_bottom">
                                                <brls:Header
                                                        width="auto"
                                                        height="auto"
                                                        title="@i18n/tsvitch/setting/app/image/header"
                                                        marginBottom="0px" />
                                                <brls:Box
                                                        width="100%"
                                                        height="auto"
                                                        axis="column"
                                                        marginBottom="30px">

                                                        <SelectorCell
                                                                id="setting/image/texture" />

                                                        <SelectorCell
                                                                id="setting/image/threads" />

                                                </brls:Box>
                                        </brls:Box>
                                </brls:ScrollingFrame>
                        </Tab>

                        <Tab label="@i18n/tsvitch/setting/opensource/tab"
                                style="inline"
                                icon="@res/svg/setting_github.svg"
                                iconActivate="@res/svg/setting_github_active.svg"
                                fontSize="22">
                                <brls:ScrollingFrame
                                        width="auto"
                                        height="auto"
                                        marginTop="10"
                                        grow="1.0">

                                        <brls:Box
                                                width="auto"
                                                height="auto"
                                                axis="column"
                                                wireframe="false"
                                                paddingLeft="@style/brls/tab_frame/content_padding_sides"
                                                paddingRight="@style/brls/tab_frame/content_padding_sides"
                                                paddingTop="@style/brls/tab_frame/content_padding_top_bottom"
                                                paddingBottom="@style/brls/tab_frame/content_padding_top_bottom">

                                                <TextBox
                                                        id="setting/label/opensource"
                                                        width="auto"
                                                        height="auto"
                                                        lineHeight="1.2"
                                                        marginBottom="10px" />

                                        </brls:Box>

                                </brls:ScrollingFrame>
                        </Tab>

                </AutoTabFrame>
                <ButtonClose
                        positionType="absolute"
                        positionTop="10"
                        positionRight="10" />
        </brls:Box>

</brls:AppletFrame>